<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="vane.micasa.co.elementsaplication.fragment.PedidoAdd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:id="@+id/area_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_nombre"
                android:layout_width="29dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_perfume" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_perfume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp">

                <EditText
                    android:id="@+id/addNombre_catalogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Perfume"
                    android:inputType="textPersonName"
                    android:textSize="20dp" />


            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_genero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_genero"
                android:layout_width="29dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_genero" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_genero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp">

                <EditText
                    android:id="@+id/addGenero_catalogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Genero"
                    android:inputType="textPersonName"
                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_casa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_casa"
                android:layout_width="29dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_casa" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_casa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp">

                <EditText
                    android:id="@+id/addCasa_catalogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Casa"
                    android:textSize="20dp"
                    android:inputType="text" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/area_ml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_ml"
                android:layout_width="29dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_ml" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_ml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp">

                <EditText
                    android:id="@+id/addMililitros_catalogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mililitros"
                    android:inputType="number"
                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_fechaPrepa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_fechaPrepa"
                android:layout_width="29dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_fechaprepa" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_fechaprepa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp">

                <EditText
                    android:id="@+id/addFechaPreparacion_catalogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha preparaciÃ³n"
                    android:inputType="date"
                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_fechaDisp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_fechaDisp"
                android:layout_width="29dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_fechadisp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_fechadisp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp">

                <EditText
                    android:id="@+id/addFechaDisponible_catalogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha disponible"
                    android:inputType="date"
                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton_cancelar"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="mostrarCatalogo"
                android:text="Cancelar" />

            <Button
                android:id="@+id/boton_aceptar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/accent"
                android:onClick="crearPerfume"
                android:text="Registrar"
                android:textColor="@android:color/white" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>