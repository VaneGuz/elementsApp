<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vane.micasa.co.elementsaplication.fragment.PedidoAdd">

    <EditText
        android:id="@+id/addNombre_catalogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/addGenero_catalogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Genero"
        android:inputType="textPersonName"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/addCasa_catalogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Casa"
        android:inputType="number"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/addMililitros_catalogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ML"
        android:inputType="number"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/addFechaDisponible_catalogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrega"
        android:inputType="date"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/addFechaPreparacion_catalogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrega"
        android:inputType="date"
        android:textSize="20dp" />

    <Button
        android:id="@+id/registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:onClick="crearPerfume"/>

</LinearLayout>
